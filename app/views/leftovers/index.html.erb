<p class="subtitle">Sobrantes</p>
<%= link_to 'Nuevo sobrante', new_leftover_path, target:"_self" %>
<table class="scroll">
  <thead>
    <tr>
      <th>ID</th>
      <th>Pedido origen</th>
      <th>Ficha ID</th>
      <th>Ficha numero</th>
      <th>Ficha version</th>

      <th>Cantidad</th>
      <th>Cantidad disponible</th>
      <th>Um</th>
      <th>Peso</th>
      <th>Ubicacion</th>

      <th>Fecha de entrada</th>
      <th>Disposicion</th>
      <th>Ficha composicion</th>
      <th>Lugar de origen</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leftovers.each do |leftover| %>
      <tr>
        <td><%= link_to leftover.id, leftover %></td>
        <td><%= leftover.order_origin %></td>
        <td><%= leftover.sheet_id %></td>
        <td><%= leftover.sheet_code %></td>
        <td><%= leftover.sheet_version %></td>

        <td><%= leftover.quantity %></td>
        <td><%= leftover.quantity_available %></td>
        <td><%= leftover.um %></td>
        <td><%= leftover.weight %></td>
        <td><%= leftover.location %></td>
         
        <td><%= leftover.entry_date %></td>
        <td><%= leftover.disposition %></td>
        <td><%= leftover.sheet_composite %></td>
        <td><%= leftover.place_origin %></td>
        <td><%= leftover.state %></td>
        <td><%= link_to 'Show', leftover %></td>
        <td><%= link_to 'Edit', edit_leftover_path(leftover), target:"_self" %></td>
        <td><% link_to 'Destroy', leftover, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
