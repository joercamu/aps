<div ng-repeat="comment in order.comments">
	<div class="comment panel">
		<section class="top">
			<h6 class="byline">
				<div ng-if="comment.user.id == 1">
					<a href="#"><i class="icon"></i>Sistema</a> 	
				</div>
				<div ng-if="comment.user.id != 1">
					<a href="#"><i class="icon"></i>{{comment.username}}</a>
				</div>
				
				<small> 
					<span class="data">
						{{comment.created_at | date :"medium"}}
					</span>
				</small>
			</h6>
		</section>
		<section class="content">
			<p>{{comment.body}}</p>
		</section>
	</div>
</div>