<h2>Olvido su contraseña?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder:"tu e-mail" %>
  </div>

  <div class="actions">
    <%= f.submit "Enviar instrucciones para el cambio de contraseña", class:"button success expand" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
