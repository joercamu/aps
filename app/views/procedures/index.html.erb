<p class="subtitle">Procesos</p>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Nombre</th>
      <th>Prensa</th>
      <th>Unidad de medida</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @procedures.each do |procedure| %>
      <tr>
        <td><%= link_to procedure.id, procedure %></td>
        <td><%= procedure.name %></td>
        <td><%= procedure.press %></td>
        <td><%= procedure.measure %></td>
        <td colspan="3">
          <% link_to 'Show', procedure %>
          <%if can? :update, procedure%>
            <%=link_to 'Editar', edit_procedure_path(procedure) %>
          <%end%>
          <% link_to 'Destroy', procedure, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

