<div>
	<div class="row">
		<div class="small-12 medium-6 medium-centered columns content-main" style="margin-bottom:0 !important">
			<%= render 'filter'%>
		</div>
		
	</div>
	
	<p>
		<%=link_to "Descargar excel", orders_search_path(format:"xls",state:params[:state],filter_key:params[:filter_key],filter_value:params[:filter_value]),method: :post,class:"label success"%>
	</p>
	
	<br>
	<div ng-controller="OrdersController">
		<%= render 'list'%>
	</div>
</div>

<script type="text/javascript">
	$(document).ready(function() {
		$('#contentMain').addClass('full-width');
    	$('table').DataTable({
    		"language": {
    			"lengthMenu":     "Mostrar _MENU_ pedidos",
    			"info": "Mostrando _START_ hasta _END_ de _TOTAL_ pedidos",
    			"search":         "Buscar:",
    			"zeroRecords":    "Pedido no encontrado",
    			"loadingRecords": "Cargando...",
				"processing":     "Procesando...",
    			"paginate": {
				    "first":      "Primero",
				    "last":       "Ultimo",
				    "next":       "Siguiente",
				    "previous":   "Anterior"
				}
    		},
    		"aLengthMenu": [[25, 50, 100, -1], [25, 50, 100, "All"]],
        	"iDisplayLength": 25
    	});
	} );
</script>
