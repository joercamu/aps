<!-- Esta vista parcial es una version sin tanta contamicacion visual -->
<table id="example" class="scroll" width="100%">
  <thead>
    <tr>
      <th>PEDIDO</th>
      <th>ORDEN DE COMPRA</th>
      <th>REPETICION</th>
      <th>FICHA</th>
      <th>CLIENTE</th>
      <th>CANTIDAD</th>
      <th>UM</th>
      <th>VALOR UNI</th>
      <th>FECHA SOLICITADA</th>
      <th>FECHA OFRECIDA</th>
      <th>ESTADO</th>
      <th>RUTA</th>
      <th>FECHA INGRESO APS</th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <th>PEDIDO</th>
      <th>ORDEN DE COMPRA</th>
      <th>REPETICION</th>
      <th>FICHA</th>
      <th>CLIENTE</th>
      <th>CANTIDAD</th>
      <th>UM</th>
      <th>VALOR UNI</th>
      <th>FECHA SOLICITADA</th>
      <th>FECHA OFRECIDA</th>
      <th>ESTADO</th>
      <th>RUTA</th>
      <th>FECHA INGRESO APS</th>
    </tr>
    </tfoot>
  <tbody id="tbody_orders">
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to "K#{order.order_number}", order,target:"_self" %></td>
        <td><%= order.order_oc%></td>
        <td><%= order.repeat %></td>
        <td><%= "#{order.sheet_client}-#{order.sheet_number}" %></td>
        <td><%= order.outsourced_name %></td>
        <td><%= order.order_quantity %></td>
        <td><%= order.order_um %></td>
        <td><%= order.order_unit_value %></td>
        <td><%= order.order_date_request %></td>
        <td><%= order.date_offer %></td>
        <td><%= order.state.sub('_',' ') %></td>
        <td><%= order.sheet_route %></td>
        <td><%= order.created_at.strftime("%F %I:%M%p") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

