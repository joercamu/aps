<p class="subtitle">Rutas de proceso</p>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Desperdicio %</th>
      <th>Editar</th>
    </tr>
  </thead>

  <tbody>
    <% @routes.each do |route| %>
      <tr>
        <td><%= link_to route.id, route %></td>
        
        <td><%= route.waste * 100 %> %</td>
        <td><%= link_to 'Editar', edit_route_path(route) %></td>
        <% link_to 'Eliminar', route, method: :delete, data: { confirm: 'Are you sure?' } %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% link_to 'Nueva ruta Route', new_route_path %>
