<p id="notice"><%= notice %></p>

<h1>Listing Modification Comments</h1>

<table>
  <thead>
    <tr>
      <th>Modification</th>
      <th>User</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @modification_comments.each do |modification_comment| %>
      <tr>
        <td><%= modification_comment.modification %></td>
        <td><%= modification_comment.user %></td>
        <td><%= modification_comment.body %></td>
        <td><%= link_to 'Show', modification_comment %></td>
        <td><%= link_to 'Edit', edit_modification_comment_path(modification_comment) %></td>
        <td><%= link_to 'Destroy', modification_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

