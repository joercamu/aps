<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @machine.name %>
</p>
<p>
  <strong>Press:</strong>
  <%= @machine.press %>
</p>
<p>
  <strong>Process:</strong>
  <%@machine.procedures.each do |procedure|%>
  	<br><%=link_to procedure.name, procedure%>
  <%end%>
</p>
<p>
  <strong>Standards:</strong>
  <%=link_to "Create Standard", new_standard_machine_ref_path(@machine)%>
  <table>
  	<tr>
  		<th>Index</th>
  		<th>UM</th>
  		<th>Per Hour</th>
  		<th>Waste</th>
  	</tr>
  <%@machine.standards.each do |standard|%>
	  <tr>
	  	<th><%=link_to standard.index, standard%></th>
	  	<th><%=standard.um%></th>
	  	<th><%=standard.per_hour%></th>
	  	<th><%=standard.waste*100%> %</th>
	  </tr>
  <%end%>
</table>
</p>
<p> <strong>Days:</strong>
  <%= link_to "Create Day", new_day_machine_ref_path(@machine)%>
<%= render 'days/list'%></p>



<%= link_to 'Edit', edit_machine_path(@machine) %> |
